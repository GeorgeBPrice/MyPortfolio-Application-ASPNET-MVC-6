<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <!-- Libs CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" type="text/css">
    <link rel="stylesheet" href="~/lib/themify-icons/css/themify-icons.css" type="text/css">
    <link rel="stylesheet" href="~/lib/featherlight/featherlight.min.css" type="text/css">
    <link rel="stylesheet" href="~/lib/featherlight/featherlight.gallery.min.css" type="text/css">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/css/theme.css">
    <link rel="stylesheet" href="~/css/utilities.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/custom.css">
</head>

<body data-spy="scroll" data-target="#navbarCollapse">
    
    <!-- Loader message for slow internet connections -->
    <div class="loader bg-dark">
        <div class="spinner-grow text-primary" role="status">
            <span class="sr-only">Loading Portfolio...</span>
        </div>
    </div>

    <!-- Navigation Header -->
    <nav id="siteNavbar" class="site-navbar site-navbar-transparent navbar navbar-expand-lg bg-white shadow-light fixed-top py-2 scrolled-0 navbar-dark"
         data-navbar-base="navbar-dark" data-navbar-toggled="navbar-light" data-navbar-scrolled="navbar-light">

        <a class="navbar-brand scrollto" href="#home">
            <img src="assets/images/logo-light.png" alt="" class="navbar-brand-img navbar-brand-img-light">
            <img src="assets/images/logo-dark.png" alt="" class="navbar-brand-img navbar-brand-img-dark">
        </a>

        <button class="navbar-toggler-alternative" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="siteNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-alternative-icon">
                <span></span>
            </span>
        </button>

        <div class="navbar-collapse collapse" id="navbarCollapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link scrollto" href="#home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link scrollto" href="#about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link scrollto" href="#skills">Skills</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link scrollto" href="#resume">Resume</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link scrollto" href="#portfolio">Portfolio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link scrollto" href="#projects">Projects</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                </li>
            </ul>
            <a class="btn btn-white d-block d-lg-inline-block ml-lg-3" href="https://www.linkedin.com/in/georgeprice108/" target="_blank"
               rel="noopener nofollow" data-on-navbar-light="btn-primary" data-on-navbar-dark="btn-white">Linked<i class="fab fa-linkedin pl-1"></i></a>
        </div>
    </nav>

    <!-- Button - Back to top -->
    <a href="#" class="btn-back-to-top scrollTo btn btn-icon btn-primary shadow-light mb-4 mr-4" tabindex="-1">
        <i class="fas fa-chevron-up btn-icon-inner"></i>
    </a>
    
    <!-- Index razor view loaded here -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        @Html.Partial("_Footer")
    </footer>

    <!-- Vendor JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-form/dist/jquery.form.min.js"></script>
    <script src="~/lib/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/lib/isotope/dist/isotope.pkgd.min.js"></script>
    <script src="~/lib/featherlight/featherlight.min.js"></script>
    <script src="~/lib/featherlight/jquery.detect_swipe.js"></script>
    <script src="~/lib/featherlight/featherlight.gallery.min.js"></script>
    <script src="~/lib/jquery.scrollTo/jquery.scrollTo.min.js"></script>
    <script src="~/lib/typed.js/typed.min.js"></script>
    <script src="~/lib/waypoints/noframework.waypoints.js"></script>

    <!-- Theme / Custom JS -->
    <script src="~/js/main.js"></script>
    <script src="~/js/custom.js"></script>

    <!-- ASP.NET -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
